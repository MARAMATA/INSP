# =============================================================================
# CONFIGURATION TESTING INSPECTIA
# =============================================================================

# Environment
ENVIRONMENT=testing
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
DB_HOST=postgres-test
DB_PORT=5432
DB_NAME=inspectia_db_test
DB_USER=inspectia_user
DB_PASSWORD=inspectia_pass
DATABASE_URL=postgresql+asyncpg://inspectia_user:inspectia_pass@postgres-test:5432/inspectia_db_test

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow-test:5000
MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow.db

# Redis Configuration
REDIS_URL=redis://redis-test:6379
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_MAX_REQUESTS=100
API_TIMEOUT=120

# Security (Testing)
SECRET_KEY=inspectia_secret_key_testing
JWT_SECRET_KEY=jwt_secret_key_testing
CORS_ORIGINS=["*"]

# ML/RL Configuration
ML_MODELS_PATH=/app/models
RL_STORE_PATH=/app/rl_store
OCR_MODELS_PATH=/app/ocr_models

# Performance (Testing)
CACHE_TTL=60
MAX_PREDICTION_BATCH_SIZE=5
ML_PREDICTION_TIMEOUT=180
RL_DECISION_TIMEOUT=120

# Monitoring (Testing)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
METRICS_ENABLED=true

# Logging (Testing)
LOG_FORMAT=text
LOG_FILE_PATH=/app/logs
LOG_ROTATION_SIZE=5MB
LOG_RETENTION_DAYS=1

# SSL/TLS (Testing - Disabled)
SSL_ENABLED=false

# Backup Configuration (Testing - Disabled)
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=1
BACKUP_PATH=/app/backups

# Alerting (Testing - Disabled)
ALERT_EMAIL=
ALERT_SLACK_WEBHOOK=
ALERT_DISCORD_WEBHOOK=

# Feature Flags (Testing - All Enabled)
FEATURE_RL_ENABLED=true
FEATURE_ML_RETRAINING_ENABLED=true
FEATURE_OCR_ENABLED=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_MONITORING=true

# Rate Limiting (Testing - Disabled)
RATE_LIMIT_REQUESTS_PER_MINUTE=10000
RATE_LIMIT_BURST=1000
RATE_LIMIT_ENABLED=false

# Health Checks (Testing)
HEALTH_CHECK_INTERVAL=5
HEALTH_CHECK_TIMEOUT=3
HEALTH_CHECK_RETRIES=3

# Database Pool (Testing)
DB_POOL_SIZE=2
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Cache Configuration (Testing)
CACHE_BACKEND=redis
CACHE_PREFIX=inspectia_test
CACHE_DEFAULT_TTL=60
CACHE_MAX_CONNECTIONS=5

# File Upload (Testing)
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=csv,pdf,jpg,jpeg,png
UPLOAD_PATH=/app/uploads
TEMP_PATH=/app/temp

# Model Configuration (Testing)
MODEL_CACHE_SIZE=2
MODEL_LOAD_TIMEOUT=60
MODEL_PREDICTION_BATCH_SIZE=5

# RL Configuration (Testing)
RL_EPSILON=0.5
RL_LEARNING_RATE=0.1
RL_EXPLORATION_DECAY=0.95
RL_MIN_EXPLORATION=0.2
RL_STRATEGY=epsilon_greedy

# OCR Configuration (Testing)
OCR_ENGINE=tesseract
OCR_LANGUAGE=fra
OCR_PSM=6
OCR_TIMEOUT=60

# Analytics (Testing)
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=1
ANALYTICS_BATCH_SIZE=10

# Performance Monitoring (Testing)
PERF_MONITORING_ENABLED=true
PERF_SAMPLING_RATE=1.0
PERF_METRICS_RETENTION_DAYS=1

# Testing specific
TEST_MODE=true
MOCK_EXTERNAL_SERVICES=true
FAST_TESTS=true
SKIP_SLOW_TESTS=false