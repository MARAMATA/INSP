# =============================================================================
# CONFIGURATION DÃ‰VELOPPEMENT INSPECTIA
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=inspectia_db
DB_USER=inspectia_user
DB_PASSWORD=inspectia_pass
DATABASE_URL=postgresql+asyncpg://inspectia_user:inspectia_pass@postgres:5432/inspectia_db

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_BACKEND_STORE_URI=postgresql://inspectia_user:inspectia_pass@postgres:5432/inspectia_db

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_MAX_REQUESTS=100
API_TIMEOUT=60

# Security (Development)
SECRET_KEY=inspectia_secret_key_development
JWT_SECRET_KEY=jwt_secret_key_development
CORS_ORIGINS=["*"]

# ML/RL Configuration
ML_MODELS_PATH=/app/models
RL_STORE_PATH=/app/rl_store
OCR_MODELS_PATH=/app/ocr_models

# Performance (Development)
CACHE_TTL=300
MAX_PREDICTION_BATCH_SIZE=10
ML_PREDICTION_TIMEOUT=120
RL_DECISION_TIMEOUT=60

# Monitoring (Development)
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
METRICS_ENABLED=true

# Logging (Development)
LOG_FORMAT=text
LOG_FILE_PATH=/app/logs
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=7

# SSL/TLS (Development - Disabled)
SSL_ENABLED=false

# Backup Configuration (Development)
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/backups

# Alerting (Development - Disabled)
ALERT_EMAIL=
ALERT_SLACK_WEBHOOK=
ALERT_DISCORD_WEBHOOK=

# Feature Flags (Development - All Enabled)
FEATURE_RL_ENABLED=true
FEATURE_ML_RETRAINING_ENABLED=true
FEATURE_OCR_ENABLED=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_MONITORING=true

# Rate Limiting (Development - Relaxed)
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100
RATE_LIMIT_ENABLED=false

# Health Checks (Development)
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=5

# Database Pool (Development)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Cache Configuration (Development)
CACHE_BACKEND=redis
CACHE_PREFIX=inspectia_dev
CACHE_DEFAULT_TTL=300
CACHE_MAX_CONNECTIONS=10

# File Upload (Development)
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=csv,pdf,jpg,jpeg,png,tiff,bmp
UPLOAD_PATH=/app/uploads
TEMP_PATH=/app/temp

# Model Configuration (Development)
MODEL_CACHE_SIZE=5
MODEL_LOAD_TIMEOUT=60
MODEL_PREDICTION_BATCH_SIZE=10

# RL Configuration (Development)
RL_EPSILON=0.3
RL_LEARNING_RATE=0.05
RL_EXPLORATION_DECAY=0.99
RL_MIN_EXPLORATION=0.1
RL_STRATEGY=epsilon_greedy

# OCR Configuration (Development)
OCR_ENGINE=tesseract
OCR_LANGUAGE=fra
OCR_PSM=6
OCR_TIMEOUT=60

# Analytics (Development)
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=30
ANALYTICS_BATCH_SIZE=100

# Performance Monitoring (Development)
PERF_MONITORING_ENABLED=true
PERF_SAMPLING_RATE=1.0
PERF_METRICS_RETENTION_DAYS=7

# Development specific
HOT_RELOAD=true
AUTO_RESTART=true
DEBUG_TOOLBAR=true
PROFILING_ENABLED=true