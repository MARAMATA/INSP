# =============================================================================
# CONFIGURATION PRODUCTION INSPECTIA
# =============================================================================

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=inspectia_db
DB_USER=inspectia_user
DB_PASSWORD=inspectia_pass_production_secure
DATABASE_URL=postgresql+asyncpg://inspectia_user:inspectia_pass_production_secure@postgres:5432/inspectia_db

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_BACKEND_STORE_URI=postgresql://inspectia_user:inspectia_pass_production_secure@postgres:5432/inspectia_db

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis_secure_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_MAX_REQUESTS=1000
API_TIMEOUT=30

# Security
SECRET_KEY=inspectia_secret_key_production_very_secure
JWT_SECRET_KEY=jwt_secret_key_production_very_secure
CORS_ORIGINS=["https://inspectia.douanes.sn", "https://www.inspectia.douanes.sn"]

# ML/RL Configuration
ML_MODELS_PATH=/app/models
RL_STORE_PATH=/app/rl_store
OCR_MODELS_PATH=/app/ocr_models

# Performance
CACHE_TTL=3600
MAX_PREDICTION_BATCH_SIZE=100
ML_PREDICTION_TIMEOUT=60
RL_DECISION_TIMEOUT=30

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_ENABLED=true

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/ssl/certs/inspectia.crt
SSL_KEY_PATH=/etc/ssl/private/inspectia.key
SSL_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# Alerting
ALERT_EMAIL=admin@douanes.sn
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Feature Flags
FEATURE_RL_ENABLED=true
FEATURE_ML_RETRAINING_ENABLED=true
FEATURE_OCR_ENABLED=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_MONITORING=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20
RATE_LIMIT_ENABLED=true

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Database Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Cache Configuration
CACHE_BACKEND=redis
CACHE_PREFIX=inspectia
CACHE_DEFAULT_TTL=3600
CACHE_MAX_CONNECTIONS=100

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=csv,pdf,jpg,jpeg,png,tiff,bmp
UPLOAD_PATH=/app/uploads
TEMP_PATH=/app/temp

# Model Configuration
MODEL_CACHE_SIZE=10
MODEL_LOAD_TIMEOUT=30
MODEL_PREDICTION_BATCH_SIZE=50

# RL Configuration
RL_EPSILON=0.1
RL_LEARNING_RATE=0.01
RL_EXPLORATION_DECAY=0.995
RL_MIN_EXPLORATION=0.05
RL_STRATEGY=hybrid

# OCR Configuration
OCR_ENGINE=tesseract
OCR_LANGUAGE=fra
OCR_PSM=6
OCR_TIMEOUT=30

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_BATCH_SIZE=1000

# Performance Monitoring
PERF_MONITORING_ENABLED=true
PERF_SAMPLING_RATE=0.1
PERF_METRICS_RETENTION_DAYS=30