# =======================================================
# CONFIGURATION ENVIRONNEMENT INSPECTIA
# =======================================================

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=inspectia_user
DB_PASSWORD=YOUR_DB_PASSWORD
DB_NAME=inspectia_db
DATABASE_URL=postgresql+asyncpg://inspectia_user:YOUR_DB_PASSWORD@localhost:5432/inspectia_db

# Application Configuration
ENVIRONMENT=development
SECRET_KEY=YOUR_SECRET_KEY
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# OCR Configuration
TESSERACT_CMD=/opt/homebrew/bin/tesseract
TESSERACT_DATA_PATH=/opt/homebrew/share/tessdata
OCR_TEMP_DIR=./data/ocr/temp
OCR_OUTPUT_DIR=./data/ocr/processed

# Machine Learning Configuration
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=inspectia-ml
MODEL_STORE_PATH=./models
ML_TEMP_DIR=./data/ml/temp

# File Upload Configuration
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,tiff

# Security Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Redis Configuration (pour les tâches asynchrones)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Monitoring Configuration
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Cloud Services (optionnel)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

AZURE_STORAGE_CONNECTION_STRING=

# Email Configuration (pour notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Celery Configuration (tâches asynchrones)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Development Tools
JUPYTER_PORT=8888
TENSORBOARD_PORT=6006
MLFLOW_UI_PORT=5000
